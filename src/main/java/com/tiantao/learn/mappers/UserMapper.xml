<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tiantao.learn.mappers.UserMapper">
    <select id="selectUser" resultMap="UserMapper" parameterType="Long" useCache="true">
        select * from User where id = #{id}
    </select>
    <resultMap id="UserMapper" type="com.tiantao.learn.pojo.User">
        <result property="id" column="id" />
        <result property="name" column="name" typeHandler="com.tiantao.learn.typeHandler.NameHandler" />
    </resultMap>
</mapper>